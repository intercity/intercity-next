<div class="heading">
  <%= link_to "#{icon("chevron-left")} Server list".html_safe, root_path, class: "is-right button" %><br/>
  <h1 class="title is-center has-text-centered">Server: <%= server.name %></h1>
  <div class="tabs is-centered">
    <ul>
      <li class="<%= "is-active" if tab == "apps" %>"><%= link_to "Apps", server_apps_path(server) %></li>
      <li class="<%= "is-active" if tab == "services" %>"><%= link_to "Services", server_services_path(server) %></li>
      <li class="<%= "is-active" if tab == "deploy_keys" %>"><%= link_to "Deploy keys", server_deploy_keys_path(server) %></li>
    </ul>
    </div>
  <ul class="nav nav-tabs">
  </ul>
</div>
<%= render("servers/outdated", server: server) unless server.up_to_date? %>
<%= render "flashes" -%>
