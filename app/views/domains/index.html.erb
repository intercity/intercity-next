<%= render "apps/heading", app: @app, tab: "domains" %>
<div class="columns">
  <div class="column is-8">
    <table class="table is-striped domains">
      <thead>
        <tr>
          <th>Domain</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render @app.domains %>
        <tr class="<%= "is-hidden" if @app.domains.any? %>" data-role="empty-table">
          <td colspan="3" class="text-muted text-center">There are no domains</td>
        </tr>
      </tbody>
    </table>
  </div>
  <div data-role="form" class="column is-4">
    <%= render "form" %>
  </div>
</div>
